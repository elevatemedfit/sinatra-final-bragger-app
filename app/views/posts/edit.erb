    <p>Caloric Burn: <input type="text" name="caloric_burn" placeholder='<%=@post.caloric_burn%>'></p>
    <p>Walking Distance: <input type="text" name="walking_distance" placeholder='<%=@post.walking_distance%>'></p>
    <p>Content: </p>
    <textarea name="content" value='content'rows="10" cols="30" placeholder='<%=@post.content%>'></textarea>
